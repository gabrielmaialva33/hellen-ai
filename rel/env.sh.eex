#!/bin/sh

# Sets and samples the RELEASE_TMP used by the system.
# The release will not boot without a RELEASE_TMP that it can use
# to write files. This directory must be writable and be in a separate
# location for each running instance.

export RELEASE_TMP="${RELEASE_TMP:-/tmp}"

# No SSL verify for local development
export ERL_FLAGS="+S 4:4"
