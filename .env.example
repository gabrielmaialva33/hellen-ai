# Database
DATABASE_URL=ecto://hellen:hellen_dev@localhost:5432/hellen_dev

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant Vector DB
QDRANT_URL=http://localhost:6333

# NVIDIA NIM API (required for AI features)
# Get your key at https://developer.nvidia.com/
NVIDIA_API_KEY=nvapi-your-key-here
# Or use multiple keys (comma-separated) for load distribution
# NVIDIA_API_KEYS=nvapi-key1,nvapi-key2,nvapi-key3

# Groq API (optional, for alternative transcription)
# Get your key at https://console.groq.com/
GROQ_API_KEY=gsk_your-key-here

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_ENDPOINT=your-account-id.r2.cloudflarestorage.com
R2_BUCKET=hellen-uploads
R2_PUBLIC_URL=https://your-public-url.r2.dev

# Phoenix
SECRET_KEY_BASE=generate-with-mix-phx-gen-secret
PHX_HOST=localhost
PORT=4000

# Guardian JWT
GUARDIAN_SECRET_KEY=generate-a-long-random-secret-key-here

# Stripe (for billing features)
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Firebase (optional, for mobile auth)
# Copy config/firebase.json.example to config/firebase.json and fill in your values

# Mailgun (production email)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-domain.com
